@using Microsoft.AspNetCore.Identity


<ul class="navbar-nav">
@if (User.Identity.IsAuthenticated)
{
    <li class="nav-item">
        <a class="nav-link text-dark" href="/Profile/Index" title="Manage"> Hello @User.Identity.Name!</a>
    </li>
    <li class="nav-item">
       <a href="/Account/Logout" class="nav-link btn btn-link text-dark">Çıkış Yap</a>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
